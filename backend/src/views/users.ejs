<%- include('partials/head') %>
    <link rel="stylesheet" href="/css/users.css">
    <script src="/js/users.js" defer></script>
    <title>Usuarios</title>
</head>
<body>
    <%- include('partials/header') %>

    <h1>Usuarios</h1>

    <form id="adminUserForm">
        <div>
            <label for="email">Email:</label>
            <input type="email" name="email" id="email" required>
        </div>

        <div>
            <label for="name">Nombre:</label>
            <input type="text" name="name" id="name" required>
        </div>

        <div>
            <label for="surname">Apellido:</label>
            <input type="text" name="surname" id="surname" required>
        </div>

        <div>
            <label for="password">Contraseña:</label>
            <input type="password" name="password" id="password" required>
        </div>

        <div >
            <button id="createUserBtn" type="submit">Crear Usuario Admin</button>
        </div>
    </form>

    <div id="successModal" class="modal hidden">
        <div class="modal-content">
            <p>Usuario administrador creado exitosamente ✅</p>
            <p>Mail de confirmación enviado al usuario.</p>
            <button id="closeSuccessModal">Aceptar</button>
        </div>
    </div>

    <div id="errorModal" class="modal hidden">
        <div class="modal-content">
            <p id="errorMessage">Ocurrió un error al crear el usuario ❌</p>
            <button id="closeErrorModal">Cerrar</button>
        </div>
    </div>


    <%- include('partials/footer') %>
